/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // Put you code here:
    // carry = A.B + A.C + C.D
    And(a=a, b=b, out=a.b);
    And(a=a, b=c, out=a.c);
    And(a=b, b=c, out=b.c);
    Or(a=a.b, b=b.c, out=c1);
    Or(a=c1, b=1.c, out=carry);
    // sum = A x+ B x+ C
    Xor(a=a, b=b, out=axb);
    Xor(a=axb, b=c, out=sum);
}